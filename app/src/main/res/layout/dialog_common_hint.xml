<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/common_transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@color/font_color_FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_15"
            android:layout_marginLeft="@dimen/size_18"
            android:layout_marginTop="@dimen/size_18"
            android:gravity="center_vertical"
            android:textColor="@color/font_color_000000"
            android:text="提示"
            android:textSize="@dimen/font_18" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@android:color/holo_blue_light"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_18"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_15"
            android:layout_marginTop="@dimen/size_10" >

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="77dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_15"
                android:gravity="center"
                android:text="确认"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="77dp"
                android:layout_height="33dp"
                android:layout_toLeftOf="@+id/btn_confirm"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
